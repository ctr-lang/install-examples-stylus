//----------------------------------------------------------------------------//
// -> Index container for main page
//----------------------------------------------------------------------------//
ctr('.index-container', {
  width: 75vw
  height: 75vh
  grid: {
    container: true
  }
  'comp-.title-container': {
    grid: {
      align: 'center'
      row: '1/4'
    }
    comp-title: {
      key: 'h1 > span'
      font-size: 10vw
      color: '$primary-bg$'
      font-family: monospace
      first-child: {
        extend-SpanAnimation: {
          color: #3498db
          prefix: 'first'
        }
      }
      last-child: {
        extend-SpanAnimation: {
          color: #c0392b
          delay: 2s
          prefix: 'last'
        }
      }
    }
  }
  'comp-.img-container': {
    position: relative
    grid: {
      align: 'center'
      row: '3/4'
    }
    'comp-img': {
      size: 100%
    }
    before: {
      content: false
      size: 11vw
      position: absolute
      top: 4vw
      //image is getting pulled in through css-loader
      background-image: 'url(../img/ctr-logo.svg)'
      filter: drop-shadow(0px 400px 10px hsla(15, 100%, 50%, 0.69))
      animation: {
        name: 'tester'
        count: infinite
        direction: alternate
        duration: 8s
        tl: {
          '0': {
            filter: drop-shadow(0px 400px 5px hsla(15, 100%, 50%, 0.69))
          }
          '25': {
            filter: drop-shadow(-400px 0px 5px hsla(301, 100%, 50%, 0.69))
          }
          '50': {
            filter: drop-shadow(0px -400px 5px hsla(209, 100%, 50%, 0.69))
          }
          '75': {
            filter: drop-shadow(400px 0px 5px hsla(126, 100%, 50%, 0.69))
          }
          '100': {
            filter: drop-shadow(0px 400px 10px hsla(15, 100%, 50%, 0.69))
          }
        }
      }
    }
  }
})

